<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:contactInfoView="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_header_titlebar_height"
        android:paddingTop="@dimen/header_mark_tb_padding"
        android:paddingBottom="@dimen/header_mark_tb_padding"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/enrich_header_mark_small"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_header_titlebar_height"
        android:background="@color/colorLightYellow"
        android:paddingLeft="@dimen/top_header_titlebar_left_right_padding"
        android:paddingRight="@dimen/top_header_titlebar_left_right_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_header_titlebar_height"
            android:layout_centerInParent="true"
            android:background="@color/colorLightYellow"
            android:gravity="center"
            android:text="@string/str_edit_card_details"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/top_header_titlebar_textsize"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/card_detail_screen_cardview_tb_padding"
                    android:paddingBottom="@dimen/card_detail_screen_cardview_tb_padding"
                    android:paddingLeft="@dimen/card_detail_screen_cardview_lr_padding"
                    android:paddingRight="@dimen/card_detail_screen_cardview_lr_padding"
                    >
                    <ImageView
                        android:id="@+id/imgViewHeaderCard"
                        android:layout_width="@dimen/card_detail_screen_header_card_imageview_width"
                        android:layout_height="@dimen/card_detail_screen_header_card_imageview_height"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/header_cardimage_background"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/imgViewHeaderCard"
                        android:layout_centerVertical="true"
                        >
                        <TextView
                            android:id="@+id/txtContactName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#222222"
                            android:text="VITO FERA"
                            android:textSize="@dimen/card_detail_screen_header_contactname_textsize"
                            />
                        <TextView
                            android:id="@+id/txtHeaderTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#969696"
                            android:text="VITO FERA"
                            android:textSize="@dimen/card_detail_screen_header_company_textsize"
                            />
                        <TextView
                            android:id="@+id/txtHeaderCompany"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#969696"
                            android:text="VITO FERA"
                            android:textSize="@dimen/card_detail_screen_header_company_textsize"
                            />
                    </LinearLayout>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/light_grey_seperator_view_height"
                    android:background="@color/colorLightGray"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/enrich_profile_selector_title_textsize"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="@string/str_contact_information"
                android:layout_marginLeft="@dimen/contact_screen_left_right_padding"
                android:layout_marginRight="@dimen/contact_screen_left_right_padding"
                android:layout_marginTop="@dimen/contact_screen_top_bottom_padding"
                android:layout_marginBottom="@dimen/contact_screen_top_bottom_padding"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/light_grey_seperator_view_height"
                android:background="@color/colorLightGray"
                />
            <enrich.and.com.ui.customviews.ContactInfoView
                android:id="@+id/contactInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                contactInfoView:isEditable="true"
                android:visibility="visible"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="40dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="30dp"
                    >
                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="@dimen/add_mycontact_layout_button_width"
                        android:layout_height="@dimen/add_mycontact_layout_button_height"
                        android:text="@string/str_button_cancel"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="@dimen/setting_upload_button_textsize"
                        android:background="@drawable/white_roundrect_save_btn"
                        android:layout_marginRight="25dp"
                        />
                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="@dimen/add_mycontact_layout_button_width"
                        android:layout_height="@dimen/add_mycontact_layout_button_height"
                        android:text="@string/str_button_save"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="@dimen/setting_upload_button_textsize"
                        android:background="@drawable/white_roundrect_save_btn"
                        android:layout_alignParentBottom="true"
                        />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
        />
    </ScrollView>

</LinearLayout>