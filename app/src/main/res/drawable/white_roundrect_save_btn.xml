<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorLightGray" />
            <corners android:radius="3dp" />
            <padding android:left="@dimen/setting_upload_button_lr_padding"
                android:right="@dimen/setting_upload_button_lr_padding"
                android:top="@dimen/setting_upload_button_tb_padding"
                android:bottom="@dimen/setting_upload_button_tb_padding" />
            <stroke
                android:width="1dp"
                android:color="@color/borderStrokeColor"/>
        </shape>
    </item>

    <!-- normal/default -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/borderStrokeColor"/>
            <corners android:radius="3dp" />
            <padding android:left="@dimen/setting_upload_button_lr_padding"
                android:right="@dimen/setting_upload_button_lr_padding"
                android:top="@dimen/setting_upload_button_tb_padding"
                android:bottom="@dimen/setting_upload_button_tb_padding" />
        </shape>
    </item>
</selector>