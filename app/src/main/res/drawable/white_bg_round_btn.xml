<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorLightGray" />
            <corners android:radius="@dimen/button_round_corner" />
            <padding android:left="@dimen/login_button_lr_padding"
                android:right="@dimen/login_button_lr_padding"
                android:top="@dimen/login_button_tb_padding"
                android:bottom="@dimen/login_button_tb_padding" />
            <stroke
                android:width="1dp"
                android:color="@color/borderStrokeColor"/>
        </shape>
    </item>

    <!-- normal/default -->
    <item>

        <shape>
            <solid android:color="@color/colorWhite" />
            <corners android:radius="@dimen/button_round_corner" />
            <padding android:left="@dimen/login_button_lr_padding"
                android:right="@dimen/login_button_lr_padding"
                android:top="@dimen/login_button_tb_padding"
                android:bottom="@dimen/login_button_tb_padding" />
            <stroke
                android:width="1dp"
                android:color="@color/borderStrokeColor"/>
        </shape>
    </item>
</selector>