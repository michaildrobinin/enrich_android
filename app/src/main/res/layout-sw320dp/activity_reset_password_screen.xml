<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_header_titlebar_height"
        android:background="@color/colorLightYellow"
        android:text="@string/str_reset_password"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/top_header_titlebar_textsize"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_gradient_white_bg"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:scaleType="fitCenter"
            android:src="@drawable/small_robot"
            android:layout_marginLeft="@dimen/login_screen_robot_left_right_margin"
            android:layout_marginRight="@dimen/login_screen_robot_left_right_margin"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:paddingLeft="@dimen/login_screen_email_box_left_right_margin"
            android:paddingRight="@dimen/login_screen_email_box_left_right_margin"
            android:orientation="vertical"
            android:gravity="center"
            >

            <EditText
                android:id="@+id/edtRegisteredEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorEmailEditTextColor"
                android:textColorHighlight="@color/colorEmailEditHint"
                android:background="@color/colorEmailEditBgColor"
                android:paddingLeft="@dimen/login_screen_email_box_left_right_padding"
                android:paddingRight="@dimen/login_screen_email_box_left_right_padding"
                android:paddingTop="@dimen/login_screen_email_box_top_bottom_padding"
                android:paddingBottom="@dimen/login_screen_email_box_top_bottom_padding"
                android:textSize="@dimen/login_screen_email_box_textsize"
                android:hint="@string/str_registered_email"
                android:inputType="textEmailAddress"
                android:textStyle="bold"
                android:singleLine="true"
                android:maxLines="1"
                />

            <Button
                android:id="@+id/btnResetPassword"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/red_bg_round_btn"
                android:text="@string/str_reset_password"
                android:textSize="@dimen/login_button_textsize"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            >
            <TextView
                android:id="@+id/txtLoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/login_screen_email_box_textsize"
                android:textColor="@color/colorBlack"
                android:text="@string/str_login"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@drawable/gradient_gray_bar"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>